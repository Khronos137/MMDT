<?xml version="1.0"?>
<robot name="mesaIzq" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:property name="pi" value="3.1415" />
  <xacro:property name="width" value="0.02" />
  <xacro:property name="radio" value="0.02" />
  <xacro:property name="mass" value="1.0" />
  
  <!-- <xacro:include filename="$(find mmdt_rat20)/urdf/materials.xacro" /> -->

<!-- DEFINICIONES INICIALES -->
  <xacro:macro name="default_inertial" params="mass">
    <inertial>
      <mass value="${mass}" />
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
    </inertial>
  </xacro:macro>

<!-- CONSTRUCCION DE cilindroS PARA CONTROLAR LA TERCERA EN TODAS LAS POSICIONES -->
  <link name="world">
  </link>

  <joint name="cilindroZ_extension" type="prismatic">
    <parent link="world"/>
    <child link="cilindroZ_link"/>
    <axis xyz="0 0 1" />
    <limit effort="1000.0" lower="-100" upper="100" velocity="0.5"/>
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <dynamics damping="1.0" friction="0.0"/>
  </joint>

  <link name="cilindroZ_link">
    <gravity>0</gravity>
